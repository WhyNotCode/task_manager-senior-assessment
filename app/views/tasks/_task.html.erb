<div class="card shadow-sm mb-3" id="<%= dom_id task %>">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-start">
      <div>
        <h5 class="card-title mb-1 d-flex align-items-center">
          <%= task.title %>
        </h5>
        <% if task.description.present? %>
          <p class="card-text text-muted mb-2"><%= task.description %></p>
        <% else %>
          <p class="card-text text-muted mb-2">
            <small><em>No description provided</em></small>
          </p>
        <% end %>
        <small class="text-muted">
          Created: <%= task.created_at.strftime("%b %d, %Y") %>
          <% if task.completed? %>
            * Completed: <%= task.completed_at.strftime("%b %d, %Y") %>
          <% end %>
        </small>
      </div>
      
      <div class="btn-group" role="group">
        <!-- Toggle complete/incomplete -->
        <%= link_to toggle_complete_task_path(task), 
                    class: "btn btn-sm #{task.completed? ? 'btn-warning' : 'btn-success'}",
                    data: { turbo_method: :patch } do %>
          <% if task.completed? %>
            <i class="bi bi-arrow-counterclockwise me-1"></i>Mark Incomplete
          <% else %>
            <i class="bi bi-check-circle me-1"></i>Complete
          <% end %>
        <% end %>
        
        <!-- Edit button -->
        <%= link_to edit_task_path(task), 
                    class: "btn btn-sm btn-outline-secondary ms-1" do %>
          <i class="bi bi-pencil me-1"></i>Edit
        <% end %>
        
        <!-- Delete button -->
        <%= button_to "Delete", task, 
                    method: :delete, 
                    class: "btn btn-sm btn-outline-danger ms-1",
                    data: { confirm: "Are you sure you want to delete this task?" },
                    form: { class: "d-inline" } %>
      </div>
    </div>
  </div>
</div>