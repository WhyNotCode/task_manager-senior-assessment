<div class="card shadow-sm mb-3 task-card">
  <div class="card-body">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start">
      <div class="mb-3 mb-md-0 flex-grow-1 me-md-3">
        <h5 class="card-title h6 mb-1">
          <span class="d-inline-block text-truncate" style="max-width: 200px;">
            <%= task.title %>
          </span>
          
        </h5>
        
        <% if task.description.present? %>
          <p class="card-text text-muted small mb-2 text-truncate-mobile">
            <%= truncate(task.description, length: 100) %>
          </p>
        <% end %>
        
        <small class="text-muted d-block">
          <i class="bi bi-calendar"></i> <%= task.created_at.strftime("%b %d") %>
          <% if task.completed? %>
            * <i class="bi bi-check-circle"></i> <%= task.completed_at.strftime("%b %d") %>
          <% end %>
        </small>
      </div>
      
      <!-- Responsive button group -->
      <div class="d-flex ms-auto">
  <%= link_to toggle_complete_task_path(task), 
              class: "btn btn-sm #{task.completed? ? 'btn-warning' : 'btn-success'} me-1 text-nowrap",
              data: { turbo_method: :patch } do %>
    <% if task.completed? %>
      <i class="bi bi-arrow-counterclockwise me-1"></i> <span class="d-none d-sm-inline">Incomplete</span>
    <% else %>
      <i class="bi bi-check-circle me-1"></i> <span class="d-none d-sm-inline">Complete</span>
    <% end %>
  <% end %>
  
  <%= link_to edit_task_path(task), 
              class: "btn btn-sm btn-outline-secondary me-1 text-nowrap" do %>
    <i class="bi bi-pencil me-1"></i> <span class="d-none d-sm-inline">Edit</span>
  <% end %>
  
  <%= button_to task, 
              method: :delete, 
              class: "btn btn-sm btn-outline-danger text-nowrap",
              data: { confirm: "Delete this task?" },
              form: { class: "d-inline m-0" } do %>
    <i class="bi bi-trash me-1"></i> <span class="d-none d-sm-inline">Delete</span>
  <% end %>
</div>
    </div>
  </div>
</div>