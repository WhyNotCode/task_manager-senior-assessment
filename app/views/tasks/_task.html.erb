<div class="card-panel shadow p-5 rounded-4 mb-2" id="<%= dom_id task %>">

    <div class="card-body">
      <h5 class="card-title"><%= task.title %></h5>
      <br/>
      <p class="card-text"><%= task.description %></p>
      <br/>
      <h6 class="card-subtitle mb-2 text-muted">Completed: <%= task.completed %></h6>
      <%= link_to "Complete", root_path, class: "nav-link" %>
      <div class="mt-2">
        <%= link_to "Edit", edit_task_path(task), class: "btn btn-sm btn-outline-secondary me-1" %>
        <%= link_to "Show", task, class: "btn btn-sm btn-outline-primary me-1" %>
        <%= link_to "Delete", task, 
            method: :delete, 
            data: { confirm: "Are you sure?" }, 
            class: "btn btn-sm btn-outline-danger" %>
      </div>
    </div>

</div>
