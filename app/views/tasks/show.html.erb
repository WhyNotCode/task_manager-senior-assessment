<% if notice %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <strong>Success!</strong> <%= notice %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
<% end %>

<div class="container mt-4">
  <div class="card shadow">
    <div class="card-header bg-info text-white">
      <h1 class="h3 mb-0">
        <i class="bi bi-eye"></i> Task Details
      </h1>
    </div>
    
    <div class="card-body">
      <%= render @task %>
    </div>
    
    <div class="card-footer">
      <div class="btn-group" role="group">
        <%= link_to edit_task_path(@task), class: "btn btn-primary me-2 rounded" do %>
          <i class="bi bi-pencil"></i> Edit Task
        <% end %>
        
        <%= link_to tasks_path, class: "btn btn-secondary me-2 rounded" do %>
          <i class="bi bi-arrow-left"></i> Back to Tasks
        <% end %>
        
        <%= button_to @task, 
            method: :delete, 
            class: "btn btn-danger me-2 rounded",
            data: { confirm: "Are you sure you want to delete this task?" } do %>
          <i class="bi bi-trash"></i> Delete Task
        <% end %>
      </div>
    </div>
  </div>
</div>